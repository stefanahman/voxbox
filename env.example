# VoxBox Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Mode
# =============================================================================
MODE=dropbox  # or "local" for development

# =============================================================================
# Whisper (only used when YouTube captions unavailable)
# =============================================================================
WHISPER_MODEL=base  # tiny, base, small, medium, large-v3

# =============================================================================
# Gemini (for summarization)
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# =============================================================================
# Dropbox (required for dropbox mode)
# =============================================================================
DROPBOX_APP_KEY=your_dropbox_app_key
DROPBOX_APP_SECRET=your_dropbox_app_secret
DROPBOX_REDIRECT_URI=http://localhost:8080/oauth/callback
ALLOWED_ACCOUNTS=user@example.com

# =============================================================================
# Notifications (optional)
# =============================================================================
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# =============================================================================
# Processing
# =============================================================================
POLL_INTERVAL=30
MAX_RETRIES=3
RETRY_DELAY=2
AUDIO_QUALITY=192  # kbps for MP3

# =============================================================================
# Tag Features
# =============================================================================
ENABLE_TAGS=true
ENABLE_TAG_LEARNING=true
MAX_TAGS_PER_FILE=3

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGS=true

# =============================================================================
# Paths (defaults work for Docker, override for local dev)
# =============================================================================
DATA_DIR=/app/data

# =============================================================================
# OAuth Server
# =============================================================================
OAUTH_SERVER_PORT=8080
OAUTH_SERVER_HOST=0.0.0.0
OAUTH_ALWAYS_ENABLED=false

